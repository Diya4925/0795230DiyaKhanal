using Microsoft.EntityFrameworkCore;
using Microsoft.Extensions.DependencyInjection;
using System;
using System.Linq;

namespace RazorPagesTarotCards.Models
{
    public static class SeedData_TarotCards
    {
        public static void Initialize(IServiceProvider serviceProvider)
        {
            using (var context = new RazorPagesTarotCardsContext(
                serviceProvider.GetRequiredService<
                    DbContextOptions<RazorPagesTarotCardsContext>>()))
            {
                // Look for any cards.
                if (context.TarotCards.Any())
                {
                    return;   // DB has been seeded
                }

                context.TarotCards.AddRange(
                    new TarotCards
                    {
                        ID = 1,
                        Tarot_Decks = "Art of Life Deck",
                        ReleaseDate = DateTime.Parse("1978-11-12"),
                        Theme = "Art Work",
                        Price = 38.43M
                    },

                    new TarotCards
                    {
                        ID = 2,
                        Tarot_Decks = "Celestial Deck",
                        ReleaseDate = DateTime.Parse("1999-9-30"),
                        Theme = "constellations and stars",
                        Price = 78.44M
                    },

                    new TarotCards
                    {
                        ID = 3,
                        Tarot_Decks = "Deviant Moon Deck",
                        ReleaseDate = DateTime.Parse("2012-3-9"),
                        Theme = "childhood dreams",
                        Price = 51.22M
                    },

                    new TarotCards
                    {
                        ID = 4,
                        Tarot_Decks = "Heart & Hands Deck",
                        ReleaseDate = DateTime.Parse("2005-12-6"),
                        Theme = "Blood Lines",
                        Price = 28.32M
                    },
                    new TarotCards
                    {
                        ID = 5,
                        Tarot_Decks = "Tarot of Mystical Moments Deck",
                        ReleaseDate = DateTime.Parse("1948-5-21"),
                        Theme = "beauty and imagination",
                        Price = 17.99M
                    }
                );
                context.SaveChanges();
            }
        }
    }
}